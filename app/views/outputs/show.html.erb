<div class="main"> 
  <h2 class="main-heading">Results for <%= @output.group_name %>: Input #<%= @count %></h2>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Simulation Days</th>
        <th>Day Span</th>
        <th>Vaccines</th>
        <th>Vaccines Cost</th>
        <th>Advertising</th>
        <th>Remaining Budget</th>
      </td>
    </thead>
    <tbody>
      <tr>
        <td><%= @input.days %></td>
        <td><%= @day_span - @input.days %> - <%= @day_span %></td>
        <td><%= number_with_delimiter(@input.vaccines) %></td>
        <td><%= number_to_currency(@input.vaccines * 13) %></td>
        <td><%= number_to_currency(@input.ads) %></td>
        <td><%= number_to_currency(@input.money_left) %></td>
      </tr>
    </tbody>
  </table>  

  <br />
  <h3 class="main-heading">Output</h3>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Population</th>
        <th>Sick</th>
        <th>Immune</th>
        <th>Vaccines Remaining</th>
      </td>
    </thead>
    <tbody>
      <tr>
        <td><%= number_with_delimiter(@population) %></td>
        <td><%= number_with_delimiter(@sick) %></td>
        <td><%= number_with_delimiter(@immune) %></td>
        <td><%= number_with_delimiter(@vaccs_left) %></td>
      </tr>
    </tbody>
  </table>

  <hr />

  <div class="row">
      <div class="col-md-6 col-lg-4 text-center">
        <h3 class="main-heading">Percentage Sick</h3>
         <%= link_to image_tag("/assets/images/"+@output.group_name+"/percentage" + @count.to_s + ".jpg"),"#percentage", class: "fancybox" %>
           <div style="display:none">
             <div id="percentage">
               <%=image_tag("/assets/images/"+@output.group_name+"/percentage" + @count.to_s + ".jpg")%>
             </div>
           </div>
       </div>
       <div class="col-md-6 col-lg-4 text-center">
          <h3 class="main-heading">Actual Sick</h3>
          <%= link_to image_tag("/assets/images/"+@output.group_name+"/sick" + @count.to_s + ".jpg"),"#sick", class: "fancybox" %>
          <div style="display:none;">
              <div id="sick">
                <%=image_tag("/assets/images/"+@output.group_name+"/sick" + @count.to_s + ".jpg")%>
              </div>
          </div>
       </div>
    </div>


  <hr />
  <%= button_to 'Back', :back, method: :get, class: 'btn btn-sm btn-primary' %>
</div>