<% get_output_count(@output.group_name, @output.input_id) %> 

<div class="panel-heading">Results for <%= @output.group_name %> Input</div>
 
<div class="panel-body"> 

<% 
  input = Input.find(@output.input_id)
  vaccs_money = input.vaccines
  vaccs_left = 0
  population = 0
  sick = 0
  immune = 0
  Output.belongs_to_input(@output.input_id). each do |o| 
    vaccs_left += o.vaccs_left
    population += o.population
    sick += o.sick
    immune += o.immune
end %>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Vaccines</th>
        <th>Advertising</th>
        <th>Schools closed?</th>
        <th>Simulation Days</th>
        <th>Remaining Budget</th>
      </td>
    </thead>
    <tbody>
      <tr>
        <td><%= input.vaccines %></td>
        <td><%= input.ads %></td>
        <td><%= input.school_off %></td>
        <td><%= input.days %></td>
        <td><%= input.money_left %></td>
      </tr>
    </tbody>
  </table>  

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Budget Remaining</th>
        <th>Vaccine Expense</th>
        <th>Advertising Expense</th>
        <th>Vaccines Remaining</th>
        <th>Population</th>
        <th>Sick</th>
        <th>Immune</th>
      </td>
    </thead>
    <tbody>
      <tr>
        <td><%= @output.money_left %></td>
        <td><%= vaccs_money %></td>
        <td><%= @output.money_spent_ads %></td>
        <td><%= vaccs_left %></td>
        <td><%= population %></td>
        <td><%= sick %></td>
        <td><%= immune %></td>
      </tr>
    </tbody>
  </table>

  <hr />
  <%= button_to 'Back', :back, method: :get, class: 'btn btn-sm' %>