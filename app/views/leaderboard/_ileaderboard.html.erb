<div class = "table-responsive">
	<table class="table table-striped table-hover">
		<thead>
	    	<tr>
	      		<th>Class</th>
	    	</tr>
	  	</thead>
	  	<tbody>
	  		<% Course.by_teacher(current_user.email).each do |course| %>
				<tr>
					<td><%= link_to course.name_crn, leaderboard_show_path(course_id: course.id), method: :get %></td>
				</tr>
			<% end %>
	  	</tbody>
	</table>
</div>
