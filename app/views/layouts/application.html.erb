<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <title>FluSim</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user.present? %>
    <%-#--- BEGIN NAVIGATION BAR ----%>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                </button>
                <%= link_to "FluSim", root_path %>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <% if current_user.admin? %>
                        <li><%= link_to 'Access', root_path, method: :get, class: 'btn btn-sm', id: 'navbtn' %></li>
                        <li><%= link_to 'Users', users_path, method: :get, class: 'btn btn-sm', id: 'navbtn' %></li>
                    <% elsif current_user.instructor? %>
                        <li><%= link_to 'Classes', courses_path, method: :get, class: 'btn btn-sm', id: 'navbtn' %></li>
                        <li><%= link_to 'Forum', posts_path, method: :get, class: 'btn btn-sm', id: 'navbtn' %></li>
                        <li><%= link_to 'Calendar', root_path, method: :get, class: 'btn btn-sm', id: 'navbtn' %></li>
                    <% else %>
                        <li><%= link_to 'Groups', groups_path, method: :get, class: 'btn btn-sm', id: 'navbtn' %></li>
                        <li><%= link_to 'Forum', posts_path, method: :get, class: 'btn btn-sm', id: 'navbtn' %></li>
                    <% end %>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-sm', id: 'navbtn' %></li>
                </ul>
            </div>
        </div>
    </nav>
    <%-#--- END NAVIGATION BAR ----%>
<% end %>

<%-#--- BEGIN MAIN CONTAINER ----%>
<div id="main-container" class="container">
    <%-#--- BEGIN FIRST ROW ----%>
    <div class="row">
        <div id="main" class="col-xs-6 col-md-9">
            <div class="panel panel-default">
                <%= yield %>
            </div>
        </div>
    </div>
    <%-#--- END FIRST ROW ----%>
</div>
<%-#--- END MAIN CONTAINER ----%>

<%-#--- BEGIN FOOTER BAR ----%>
<% if notice || alert %>
    <nav class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="alertnotice">
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
        </div>
    </nav>
<% end %>
<%-#--- END FOOTER BAR ----%>

</body>
</html>
