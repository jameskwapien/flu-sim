
<div class="main-body">
  <div calss = "table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>CRN</th>
          <th>Instructor</th>
          <th colspan="1">Controls</th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <% if course.email == current_user.email %>
            <tr>
              <td><%= course.name %></td>
              <td><%= course.crn %></td>
              <td><%= course.instructor %></td>
              <td><%= link_to 'Show Details', course %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </dib>

<br>
<hr />
  <%= button_to 'New Course', new_course_path, method: :get, class: 'btn btn-sm' %>
</div>
