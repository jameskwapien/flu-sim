

<div class="main">
  <h2 class = "main-heading">Your Classes</h2>
  <% if Course.by_teacher(current_user.email).present? %>
    <div class = "table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>CRN</th>
            <th>Instructor</th>
            <th colspan="1">Controls</th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |course| %>
            <% if course.email == current_user.email %>
              <tr>
                <td><%= course.name %></td>
                <td><%= course.crn %></td>
                <td><%= course.instructor %></td>
                <td><%= link_to 'Show Details', course %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p>You currently do not have any classes. Please click the 'New Course' button to create a new class.</p>
  <% end %>

<br>
<hr />
  <%= button_to 'New Class', new_course_path, method: :get, class: 'btn btn-sm btn-primary' %>
</div>
