<div class="panel-heading">Showing Group</div>
 
<div class="panel-body"> 
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Course</th>
        <th colspan="1">Controls</th>
      </td>
    </thead>
    <tbody>
      <tr>
        <td><%= @group.name %></td>
        <td>
          <% Course.all.each do |course| %>
            <% if course.id == @group.course_id %>
              <%= course.name %>
            <% end %>
          <% end %>
        </td> 
        <td><%= link_to 'Edit', edit_group_path(@group) %></td>
      </tr>
    </tbody>
  </table>

  <hr />
  <%= button_to 'Back', courses_path, method: :get, class: 'btn btn-sm' %>
</div>
